<h1>Listing blog_users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_users.each do |blog_user| %>
      <tr>
        <td><%= link_to 'Show', blog_user %></td>
        <td><%= link_to 'Edit', edit_blog_user_path(blog_user) %></td>
        <td><%= link_to 'Destroy', blog_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog user', new_blog_user_path %>
